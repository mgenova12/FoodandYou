<div class='row'>
  <div class="col-md-6">
    <div class='logo'> 
      <h2> Food & You</h2>
    </div>
  </div>


  <div class="col-md-6">


  <div class="form">
      
      <ul class="tab-group">
        <li class="tab"><a href="/signup">Sign Up</a></li>
        <li class="tab"><a class='active' href="/login">Log In</a></li>
      </ul>
      
      <div class="tab-content">
        <div id="login">   
          <h1>Welcome Back!</h1>
          
          <%= form_tag "/login", method: :post do %>
          
            <div class="field-wrap">
              <input type="email"required autocomplete="off" placeholder="Email Address" name="email"/>
            </div>
            
            <div class="field-wrap">
              <input type="password"required autocomplete="off" placeholder="Password" name="password"/>
            </div>
            
            <button type="submit" class="button button-block"/>Log In</button>
          
          <% end %>

        </div>
        
          <div id="login">

          </div>
        
      </div><!-- tab-content -->
      
</div> <!-- /form -->

</div>
