
<h1><%= current_user.first_name %>'s Profile</h1>


<div class="row"> 

    <div class="col-md-6">
      <div align="center">
        <img width="200" height="200" src="http://www.iconsdb.com/icons/preview/white/square-xxl.png">
        <h3> Your BMI is: </h3>
        <h3> Recommended Daily Calories:  </h3>
      </div>
    </div>
  
  <div class="col-md-6" >
    <h2> My Stats </h2>
    <hr>

  <% if current_user.profile  %>

    <%= form_tag '/profile', method: :patch do  %>
        <h3>Gender: </h3>
        <select class="form-control about" name="gender">  
          <option value="66">Male</option>
          <option value="655">Female</option>
        </select>
        
        <h3>Age: </h3>
        <input type='text' class="form-control about" name="age"> 

        <h3>Weight:</h3> 
        <input type='text' class="form-control about" name="weight"> 

      <h3>Height: </h3>
        <input type='text' class="form-control about" name="height"> 
      
        <h3>Activity Level:</h3> 
        <select class="form-control about" name="activity_level">  
          <option value="1.2">No exercise</option>
          <option value="1.375">1-3 times week</option>
          <option value="1.55">3-5 times week</option>
          <option value="1.725">6-7 times week</option>
        </select>
      
      <h3>EDIT </h3>
      
      <div class="search">
        <button class="btn" type='submit'> Save Changes </button>     
      </div>
    <% end %>

    <% else %>
    <%= form_tag '/profile', method: :post do  %>
      <h3>Gender: </h3>
      <select class="form-control about" name="gender">  
        <option>Male</option>
        <option>Female</option>
      </select>
        
      <h3>Age: <input type='text' class="form-control about" name="age"> </h3>
      <h3>Weight: <input type='text' class="form-control about" name="weight"> </h3>
      <h3>Height: <input type='text' class="form-control about" name="height"> </h3>
      
      <h3>Activity Level:</h3> 
      <select class="form-control about" name="activity_level">  
        <option value="1.2">No exercise</option>
        <option value="1.375">1-3 times week</option>
        <option value="1.55">3-5 times week</option>
        <option value="1.725">6-7 times week</option>
      </select>
      
      <h3>NEW </h3>
      
      <div class="search">
        <button class="btn" type='submit'> Save Changes </button>
      </div>
    <% end %>

  <% end %>
  
  </div>



</div>