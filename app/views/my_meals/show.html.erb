  

<div id="app2">

  <h3 align="center">{{ mealCreated }} </h3>

  <div class="col-md-6">
    <h3> Foods </h3>
    <hr>
    <ol>
    <% @saved_foods.each do |saved_food| %>
      <h4><li><%= saved_food.name %></li></h4>
    <% end %>
    <ol>
  </div>


  <div class="row">
    <div class="col-md-6">
      <h3>Daily Totals </h3>
      <hr>
      <h4>Total Calories: {{meal.total_calories}}</h4>
      <h4>Total Protein: {{meal.total_protein}}</h4>
      <h4>Total Fat: {{meal.total_totalfat}}</h4>
      <h4>Total Sugar: {{meal.total_sugar}}</h4>
      <h4>Total Sodium: {{meal.total_sodium}}</h4>
      <h4>Total Cholesterol: {{meal.total_cholesterol}}</h4>
    </div>


  </div>

</div>